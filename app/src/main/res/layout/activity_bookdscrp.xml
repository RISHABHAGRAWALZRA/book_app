<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BookdscrpActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >

        <TextView
            android:id="@+id/txtbknm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Book Name"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtarh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtbknm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgbk"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_below="@+id/txtarh"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_mylauncher_background"

            />

        <LinearLayout
            android:id="@+id/det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgbk"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="TextView"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtdsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/det"
            android:layout_marginTop="20dp"
            android:text="TextView" />


    </RelativeLayout>

</LinearLayout>
